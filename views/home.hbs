{{#if removedUser}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    User has been removed.
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="row">
  <div class="col-6"><h1>Employees
      <img
        src="employees-svgrepo-com.svg"
        alt="employees-icon"
        style="width: 50px; height:50px;"
      />
    </h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="bytton" class="btn btn-dark align-self-center"><img
        src="add-user-add-svgrepo-com.svg"
        alt="edit-icon"
        style="width: 30px; height:30px;"
      />
      add user</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr style="text-align: center;">
      {{! <th scope="col">#</th> }}
      <th scope="col">User picture</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
      <tr style="text-align: center;">
        {{!-- <th scope="row">{{this.id}}</th> --}}
        <th>
          {{#if this.user_image}}
            <img
              class="card-image"
              style="width: 75px; height: 75px;"
              src="{{this.user_image}}"
              alt="user-profile"
            />
          {{else}}
            <img
              class="card-image"
              src="person-svgrepo-com.svg"
              alt="user-profile"
              style="width: 80px; height: 80px;"
            />
          {{/if}}
        </th>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.phone}}</td>
        <td>
          <a
            href="/edituser/{{this.id}}"
            type="button"
            class="btn btn-dark btn-small"
          ><img
              src="edit-svgrepo-com.svg"
              alt="edit-icon"
              style="width: 30px; height:30px;"
            /><i class="bi bi-pencil"></i>
            Edit</a>

          <a href="/{{this.id}}" type="button" class="btn btn-dark btn-small"><i
              class="bi bi-person-x"
            ><img
                src="user-svgrepo-com.svg"
                alt="edit-icon"
                style="width: 30px; height:30px;"
              /></i>
            Delete</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>